@model MusicCollaboration.Models.Collaboration

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Collaboration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bpm" class="control-label"></label>
                <input asp-for="Bpm" class="form-control" />
                <span asp-validation-for="Bpm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SongKey" class="control-label"></label>
                <input asp-for="SongKey" class="form-control" />
                <span asp-validation-for="SongKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label"></label>
              
                @Html.DropDownListFor(m => m.Genre,
               new SelectList(Enum.GetValues(typeof(CollaborationGenre))),
               new { @class = "form-control"}
               )

                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                
                @Html.DropDownListFor(m => m.Type,
               new SelectList(Enum.GetValues(typeof(CollaborationType))),
               new {@class = "form-control"}
               )

                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <input type="hidden" name="OwnerId" value="" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
